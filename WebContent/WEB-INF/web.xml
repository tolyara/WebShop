    <servlet-class>servlets.admin.DeleteProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteProductServlet</servlet-name>
    <url-pattern>/admin/delete-product</url-pattern>
  </servlet-mapping>
  <servlet>
