  <servlet-mapping>
    <servlet-name>RemoveFromBasketServlet</servlet-name>
    <url-pattern>/remove-from-basket</url-pattern>
  </servlet-mapping>
  <servlet>
       <servlet-name>MakeOrderServlet</servlet-name>
    <servlet-class>servlets.user.MakeOrderServlet</servlet-class>
