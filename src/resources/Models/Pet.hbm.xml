<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Animals.Pet" table="pet">
        <meta attribute="class-description">
            This class contains the Pet detail.
        </meta>
        <id name="name" type="string" column="name">
            <generator class="identity"/>
        </id>
        <!--<many-to-one name="ownerID" column="client_id" type="int" not-null="true"/>-->
        <property name="ownerID" column="client_id" type="int" insert="false" update="false" not-null="true"/>
        <property name="age" column="age" type="int"/>
        <property name="sex" column="sex" type="boolean"/>
    </class>
</hibernate-mapping>